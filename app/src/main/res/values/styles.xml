<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ListViewButton">
        <item name="android:layout_height">@dimen/list_view_button_size</item>
        <item name="android:layout_width">@dimen/list_view_button_size</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginEnd">@dimen/big_padding</item>
    </style>

    <style name="ListViewVenue">
        <item name="android:padding">@dimen/small_padding</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
    </style>

    <style name="ListViewTags">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingStart">@dimen/small_padding</item>
        <item name="android:paddingEnd">@dimen/small_padding</item>
    </style>

    <style name="ListViewNumbers">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:singleLine">true</item>
    </style>

</resources>
